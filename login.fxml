<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.LoginController">
   <children>
      <VBox alignment="CENTER" fillWidth="false" layoutX="217.0" layoutY="75.0" prefHeight="400.0" prefWidth="600.0" spacing="30.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <TextField fx:id="user" promptText="user name" />
            <PasswordField fx:id="pass" promptText="password" />
            <HBox alignment="CENTER" prefHeight="20.0" prefWidth="200.0" spacing="10.0">
               <children>
                  <fx:define>
                     <ToggleGroup fx:id="type"/>
                  </fx:define>
                  <RadioButton mnemonicParsing="false" text="Doctor" toggleGroup="$type"/>
                  <RadioButton mnemonicParsing="false" text="Admin" toggleGroup="$type"/>
               </children>
            </HBox>
            <Button mnemonicParsing="false" onAction="#login" text="Login" />
         </children>
      </VBox>
   </children>
</AnchorPane>
